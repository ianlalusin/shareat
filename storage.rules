
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // -- Helper Functions --
    function getUserRole(uid) {
      return get(/databases/(default)/documents/users/$(uid)).data.role;
    }
    
    function isManagerOrAdmin(uid) {
      let role = getUserRole(uid);
      return role == 'admin' || role == 'manager';
    }

    // By default, allow public reads for images, but deny all writes.
    match /{allPaths=**} {
      allow read;
      allow write: if false;
    }

    // Allow a user to write/update their own avatar.
    match /users/{userId}/avatar.jpg {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow only managers or admins to upload product images.
    match /Items/{productId} {
      allow write: if request.auth != null && isManagerOrAdmin(request.auth.uid);
    }
  }
}
